<h1>小説の編集</h1>

<%= form_with model: @novel do |f| %>

<div class="form-group">
<label for="novel-title">Title</label>
<%= f.text_field :title, class: "form-control" %>
</div>

<div class="form-group">
<label>本文</label>
<%= f.text_area :text_body, class: "form-control" %>
</div>

<div class="form-group">
  <label>キャプション</label>
  <%= f.text_area :caption, class: "form-control" %>
</div>

<div class="form-group">
<label for="inputImage">Image</label>
<%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file" %>
</div>

  <div class="form-group">
    <%= f.select :privacy, [["公開",1],["非公開",2]], include_blank: "選択してください" %>
  </div>

<div class="form-group">
<%= f.submit '更新する', class: "btn btn-success" %>
</div>

<%= link_to "Show", novel_path(@novel.id) %>

<% end %>
</div>
