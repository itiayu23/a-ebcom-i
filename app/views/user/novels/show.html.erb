<h1>User::Novels#show</h1>
<table class="table">
  <tbody>
 <tr>
  <td>
    <%= link_to user_page_path(@user.id) do %>
    
    <%= image_tag @user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
  <br>
  <%= @user.name %>
  <% end %>
  </td>
  
  <td><%= link_to novel_path(@novel.id) do %>
    <%= @novel.title %>
    <% end %>
    </td>
    
  <td><%= @novel.caption %></td>
  <!--<td>-->
          <%# @novel.tags.each do |tag| %>
          <span><%#= tag.name %></span>
          <%# end %>
  <!--      </td>-->
  
      <td class="bookmarks_button_<%= @novel.id %>">
        <%= render 'bookmarks/bookmark-btn', obj: @novel %>
      </td>
      
       <td>
          <p>コメント数:<%= @novel.comments.count %></p>
        </td>
        

  <% if @novel.user == current_user %>
        
          <td><%= link_to edit_novel_path(@novel.id), class: "btn btn-sm btn-success" do %>
          Edit<% end %></td>
          <td><%= link_to novel_path(@novel.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" do %>
          Destroy<% end %></td>

  <% else %>
     <td></td>
     <td></td>
  
       
  
 <% end %>
  </tr>

 </tbody>
</table>


<div class="comment_index">
  <%= render 'book_comments/comment-index', book: @book %>
</div>
<div class="book_comment_form">
<%= render 'book_comments/form', book: @book, book_comment: @book_comment %>  
</div>






 </div>
  </div>
</div>
