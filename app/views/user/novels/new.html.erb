<h1>小説投稿ページ</h1>
<%= form_with model: Novel.new do |f| %>

<table class="table">
  
  <%= f.text_field :title, placeholder: "タイトル" %>
  
  <!--別ページにリロードなしで行けて個別に書ける、下書き保存が出来る-->
  <%= f.text_area :text_body, placeholder: "本文" %>
  <%= f.text_area :caption, placeholder: "小説の説明、あらすじなど" %>
  
  <!--表紙アップロードにする。-->
  <div class="form-group">
    <%= f.label :image, "画像をアップロード" %>
    <%= f.file_field :image, placeholder: "小説の表紙", accept: "image/*", class: "form-control-file" %>
  </div>
  
  <div class="form-group">
    <%= f.select :privacy, [["公開",1],["非公開",2]], include_blank: "選択してください" %>
  </div>
 
  <%= f.submit '投稿' %>

</table>
<% end %>