<div>
  <!--要確認-->
         <% novel.comments.each do |comment| %>
               
                 <%= link_to user_page_path(comment.user.id) do %>
                     <%= image_tag comment.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %></br>
                     <%= comment.user.nickname %>
                  <% end %>
                  
                  <span class="comment-comment"><%= comment.comment %></span>
                  <% if admin_signed_in? %>
                  <p class="sentiment-score">本文の感情分析スコア[<%= comment.score %>]</p>
                  <% end %>
                 
                  <% if comment.user == current_user %>
                  
                      <%= link_to novel_comment_path(novel_id: comment.novel,id: comment.id), method: :delete, class: "btn btn-sm btn-danger", remote: true do %>
                      Destroy<% end %>
                  <% end %>
                
         <% end %>
        </div>
      
        