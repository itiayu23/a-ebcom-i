        <% if user_signed_in? && pict.pict_bookmarked_by?(current_user) %>
              <p>
              <%= link_to pict_pict_bookmarks_path(pict), method: :delete, class: "text-danger", remote: true do %>
              <i class="fa-solid fa-heart"></i><%= pict.pict_bookmarks.count %>
              <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to pict_pict_bookmarks_path(pict), method: :post, remote: true do %>
               <i class="fa-solid fa-heart"></i><%= pict.pict_bookmarks.count %>
              <% end %>
              </p>
            <% end %>