<% if users.exists? %>

    <% users.each do |user| %>
<div class="text-right">
    <%= link_to "ユーザーページに戻る", user_page_path(user.id) %>
</div>
    <table class="table">
      <thead>
        <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
            <td><%= image_tag user.get_profile_image(100,100), class: "mt-3 rounded-circle" %></td>
            <td><%= user.nickname %></td>
            <td>フォロー数:<%= user.followings.count %></td>
            <td>フォロワー数:<%= user.followers.count %></td>
            <td><%= link_to "Show", user_page_path(user.id) %></td>

        </tr>
      </tbody>
    </table>
    <% end %>
  <% else %>

  <p>ユーザーはいません</p>


<% end %>