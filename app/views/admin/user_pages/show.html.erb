<h1><%= @user.nickname %>さんの詳細ページ</h1>
<table class="table-hover">
    <tr>
        <td class="pr-5 py-2">userID</td>
        <td><%= @user.id %></td>
    </tr>
    <tr>
        <td class="pr-5 py-2">　</td>
        <td>
            <%= link_to user_page_path(@user.id) do %>
      <%= image_tag @user.get_profile_image(100,100),  class: "mt-3 rounded-circle" %></td>
    </tr>
    <tr>
        <td class="pr-5 py-2">名前</td>
        <td><%= @user.name %></td>
    </tr>
    <tr>
        <td class="pr-5 py-2">ニックネーム</td>
        <td><%= @user.nickname %></td>
        <% end %>
    </tr>
    <tr>
        <td class="pr-5 py-2">メールアドレス</td>
        <td><%= @user.email %></td>
    </tr>
    <tr>
        <td class="pr-5 py-2">userステータス</td>
        <td>
      <% if @user.is_delete == false %>
      会員
      <% else %>
      退会
      <% end %>
      </td>
    </tr>

    <tr>
        <td class="pr-5 py-2">Check</td>
        <td><% if @user.check == "使用可" %>
      使用可
      <% else %>
      注意喚起
      <% end %>
      </td>
    </tr>
</table>

<%= link_to "編集する", edit_admin_user_page_path(@user), class: "btn btn-success" %>

<%= link_to "user一覧に戻る", admin_user_pages_path, class: "btn btn-info" %>