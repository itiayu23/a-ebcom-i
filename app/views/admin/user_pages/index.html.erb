<h1>Admin::UserPages#index</h1>


<table class="table table-hover table-inverse">
<thead>
  <tr>
    <th>userID</th>
    <th>名前|ニックネーム</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
    <th>公開、非公開</th>

  </tr>

</thead>


<tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td>
      <%= link_to admin_user_page_path(user.id) do %>
      <%= image_tag user.get_profile_image(100,100),  class: "mt-3 rounded-circle" %>
        名前:<%= user.name %> ｜ ニックネーム:<%= user.nickname %>
        <% end %>
        </td>

    <td>
      <%= user.email %>
    </td>

    <td>
      <% if user.is_delete == false %>
      会員
      <% else %>
      退会
      <% end %>
    </td>
    <td>
      <% if user.is_status == true %>
      公開
      <% else %>
      非公開
      <% end %>
      
    </td>

  </tr>
  <% end %>
</tbody>
</table>
